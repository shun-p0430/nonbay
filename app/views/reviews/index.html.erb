<div class="reviews-container">
  <h4>最新の投稿</h4>
  <% @reviews.each do |review| %>
    <div class="review-container">
      <%= review.user.nickname %></br>
      <%= "#{review.brand.brewery.name} / #{review.brand.name}" %></br>
      香り:<%= review.aroma_id %>
      第一印象:<%= review.impression_id %>
      旨味:<%= review.taste_id %>
      余韻:<%= review.afterglow_id %></br>
      <%= review.comment %></br>
    </div>
  <% end %>
</div>