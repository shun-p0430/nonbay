<div class="mypage-title">
  <h3><%= @user.nickname %></h3>
</div>
<div class="mypage-like">
  <h4>好みの味わい</h4>
  香り:<%= @user.aroma_id %></br>
  第一印象:<%= @user.impression_id %></br>
  旨味:<%= @user.taste_id %></br>
  余韻:<%= @user.afterglow_id %>
<div class="reviews">
  <h4>最近投稿したレビュー</h4>
  <div class="review">
    <% @reviews.each do |review| %>
      <%= review.brand.brewery.name %> / <%= review.brand.name %></br>
      <%= review.comment %></br>
      香り:<%= review.aroma_id %></br>
      第一印象:<%= review.impression_id %></br>
      旨味:<%= review.taste_id %></br>
      余韻:<%= review.afterglow_id %></br>
    <% end %>
  </div>
</div>