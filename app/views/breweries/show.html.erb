<div class="selections">
  <h4><%= "#{@brewery.name}の銘柄一覧" %></h4>
  <div class="selection">
    <% @brands.each do |brand| %>
      <%= link_to brand.name, brand_path(brand) %>
    <% end %>
  </div>
  <%= link_to '銘柄登録', new_brewery_brand_path(@brewery) %>
  <%= link_to "#{@brewery.area.name}の蔵元一覧へ戻る", area_path(@brewery.area_id) %>
</div>